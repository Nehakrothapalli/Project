<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
    <body>
        <%- include('../partials/header') %>

        <div class="signup-container">
            <h1 class="signup-heading">Sign Up</h1>
            <form action="/users/new/createnew" method="POST" class="signup-form">
                <div class="form-group">
                    <label for="firstName" class="signup-label">First Name</label>
                    <input type="text" id="firstName" name="firstName" class="signup-input" required>
                </div>
                <div class="form-group">
                    <label for="lastName" class="signup-label">Last Name</label>
                    <input type="text" id="lastName" name="lastName" class="signup-input" required>
                </div>
                <div class="form-group">
                    <label for="email" class="signup-label">Email</label>
                    <input type="email" id="email" name="email" class="signup-input" required>
                </div>
                <div class="form-group">
                    <label for="password" class="signup-label">Password</label>
                    <input type="password" id="password" name="password" class="signup-input" required>
                </div>
                <button class="signup-button">Sign Up</button>
            </form>
        </div>

        <%- include('../partials/footer') %>
    </body>
</html>

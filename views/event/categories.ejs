<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head') %>
<body>

    <!-- Header Navigation -->
    <%- include('../partials/header') %>

    <!-- Main Content -->
    <div class="container my-5">
        <h1 class="text-center mb-4">Category Wise Tech Events</h1>
        <br>
        
        <!-- Loop through categories -->
        <% const categories = ['AI', 'JavaScript', 'Web Development', 'Cybersecurity', 'Data Science', 'Cloud Computing', 'Blockchain', 'DevOps']; %>
        <% categories.forEach(category => { %>
            <h2 class="text-center"><%= category %></h2>
            <br><br>
            <div class="row">
                
                <!-- Filter and loop through events for the current category -->
                <% events.filter(event => event.category === category).forEach(event => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card shadow-sm mb-4">
                            <img class="card-img-top" src="<%= event.eventImage %>" alt="<%= event.eventName %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= event.eventName %></h5>
                                <p class="card-text"><%= event.description %></p>
                                <a href="/events/<%= event.id %>" class="btn btn-dark btn-block">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>

            </div>
        <% }) %>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer') %>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
